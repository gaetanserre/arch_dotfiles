{
  "aur_manager": {
    "name": "paru",
    "commands": [
      "rm -rf paru",
      "git clone https://aur.archlinux.org/paru.git && cd paru && makepkg -si --noconfirm && cd .. && rm -rf paru"
    ]
  },

  "packages": [
    "qtile",
    "xorg-xrandr",
    "lightdm",
    "lightdm-webkit2-greeter",
    "lightdm-webkit2-theme-glorious",
    "gnome-keyring",
    "neofetch",
    "xorg-server", 
    "xorg-xinit",
    "alacritty",
    "feh",
    "visual-studio-code-bin",
    "nautilus",
    "apple-fonts",
    "ttf-menlo-powerline-git",
    "firefox",
    "evince",
    "mimeo",
    "sxiv",
    "mugshot",
    "ttf-meslo-nerd-font-powerlevel10k",
    "lazygit",
    "pulseaudio",
    "pulsemixer",
    "dmenu",
    "zsh",
    "bat"
  ],

  "pkg_commands": [
    "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
    "git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions",
    "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
    "git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k",
    "pulseaudio -D",
    "mkdir -p ~/miniconda3",
    "curl \"https://repo.anaconda.com/miniconda/Miniconda3-latest-aarch64.sh\" -o ~/miniconda3/miniconda.sh",
    "bash ~/miniconda3/miniconda.sh -b -u -p ~/miniconda3",
    "rm -rf ~/miniconda3/miniconda.sh",
    "~/miniconda3/bin/conda init zsh"
  ],

  "files":[
    "/etc/locale.gen",
    "/etc/pacman.conf",
    "/etc/locale.conf",
    "/etc/pulse/daemon.conf",
    "/usr/share/backgrounds",
    "$HOME/.config/qtile/config.py",
    "$HOME/.config/alacritty",
    "$HOME/.xinitrc",
    "$HOME/.face",
    "$HOME/.bash_profile",
    "$HOME/.bashrc",
    "$HOME/.zshrc",
    "$HOME/.gitconfig",
    "$HOME/.p10k.zsh",
    "$HOME/.zsh_history",
    "$HOME/.fehbg",
    "$HOME/.autostart.sh"
  ],

  "commands": [
    "timedatectl set-local-rtc 1 --adjust-system-clock",
    "ln -sf /usr/share/zoneinfo/Europe/Paris /etc/localtime",
    "hwclock --systohc",
    "locale-gen"
  ],

  "chroot": [
    "pacman -Syyu --noconfirm --needed base-devel sudo grub efibootmgr os-prober netctl dhcpcd wpa_supplicant ifplugd nano",
    "useradd -G wheel -m gaetan",
    "passwd gaetan",
    "passwd",
    "systemctl enable dhcpcd.service",
    "grub-install --efi-directory=/boot --bootloader-id=GRUB",
    "grub-mkconfig -o /boot/grub/grub.cfg",
    "echo CHANGE SUDOER FILE TO MAKE WHEEL GROUP SUDO!!!"
  ]
}