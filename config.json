{
  "aur_manager": {
    "name": "paru",
    "commands": [
      "rm -rf paru",
      "git clone https://aur.archlinux.org/paru.git && cd paru && makepkg -si --noconfirm && cd .. && rm -rf paru"
    ]
  },

  "packages": [
    "nano",
    "neofetch",
    "xorg-server", 
    "xorg-xinit",
    "xmonad",
    "xmonad-contrib",
    "xterm",
    "xmobar",
    "picom",
    "alacritty",
    "feh",
    "lightdm-webkit2-theme-glorious",
    "visual-studio-code-bin",
    "nautilus",
    "apple-fonts",
    "ttf-menlo-powerline-git",
    "firefox",
    "evince",
    "mimeo",
    "sxiv",
    "mugshot",
    "tf-meslo-nerd-font-powerlevel10k",
    "lazygit",
    "pulseaudio",
    "pulsemixer",
    "dmenu",
    "zsh"
  ],

  "pkg_commands": [
    "git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions",
    "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
    "git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k",
    "sh -c '$(curl -fsSL \"https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
    "pulseaudio -D"
  ],

  "files":[
    "/etc/locale.gen",
    "/etc/pacman.conf",
    "/etc/locale.conf",
    "/etc/hostname",
    "/etc/suoders",
    "/etc/lightdm/lightdm.conf",
    "/etc/lightdm/lightdm-webkit2-greeter.conf",
    "/usr/share/backgrounds",
    "/etc/default/grub",
    "/etc/pulse/daemon.conf",
    "$HOME/.config/xmobar",
    "$HOME/.config/alacritty",
    "$HOME/.xinitrc",
    "$HOME/.xmonad",
    "$HOME/.face",
    "$HOME/.bash_profile",
    "$HOME/.bashrc",
    "$HOME/.zshrc",
    "$HOME/.gitconfig",
    "$HOME/.p10k.zsh",
    "$HOME/.zsh_history"
  ],

  "commands": [
    "chsh -s $(which zsh)",
    "timedatectl set-local-rtc 1 --adjust-system-clock",
    "ln -sf /usr/share/zoneinfo/Europe/Paris /etc/localtime",
    "hwclock --systohc",
    "locale-gen",
    "systemctl enable lightdm",
    "grub-mkconfig -o /boot/grub/grub.cfg"
  ],

  "chroot": [
    "pacman -Syyu --noconfirm --needed base-devel sudo grub efibootmgr os-prober netctl dhcpcd wpa_supplicant ifplugd",
    "useradd -G wheel -m gaetan",
    "passwd gaetan",
    "passwd",
    "cp dotfiles/sudoers /etc/sudoers",
    "netctl enable custom-dhcp-profile",
    "systemctl enable dhcpcd.service",
    "grub-install --target=x86_64-efi --efi-directory=/efi --bootloader-id=GRUB",
    "grub-mkconfig -o /boot/grub/grub.cfg"
  ]
}